# {{ ansible_managed }}
[Unit]
Description=Jekyll - Transform your plain text into static websites and blogs. ({{item.name}})
After=network.target

[Service]
Type=simple
User=root
Group=root
ExecStart=/usr/local/bin/jekyll build --source {{item.path}} --destination {{item.path}}/_site --watch
Restart=always

[Install]
WantedBy=multi-user.target
